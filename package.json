    "devDependencies": {
        "@types/chai": "~4.1.2",
        "@types/chai-spies": "~0.0.0",
        "@types/gl-matrix": "~2.3.2",
        "@types/mocha": "~2.2.48",
        "@types/query-string": "~5.1.0",
        "@types/sinon": "~4.3.0",
        "chai": "~4.1.2",
        "chai-spies": "~1.0.0",
        "concurrently": "~3.5.1",
        "coveralls": "~3.0.0",
        "gl-matrix": "~2.3.2",
        "glob": "~7.1.2",
        "http-server": "~0.11.1",
        "mocha": "~5.0.4",
        "mocha-junit-reporter": "~1.17.0",
        "mocha-multi-reporters": "~1.1.7",
        "nyc": "~11.6.0",
        "pug": "~2.0.1",
        "query-string": "~5.1.0",
        "rimraf": "~2.6.2",
        "sinon": "~4.4.6",
        "source-map-support": "~0.5.4",
        "ts-loader": "~3.5.0",
        "ts-node": "~5.0.1",
        "tslint": "~5.9.1",
        "typedoc": "~0.11.1",
        "typescript": "~2.7.2",
        "webpack": "~3.11.0",
        "webpack-glsl-loader": "~1.0.1",
        "webpack-sources": "~1.1.0"
    },
    "dependencies": {
        "rxjs": "^5.5.7"
    },
    "peerDependencies": {
        "rxjs": "^5.5.7"
    },
    "scripts": {
        "build": "webpack && node pugconfig.js",
        "server": "http-server ./build -a localhost -p 4000",
        "server-watch": "concurrently \"webpack --watch\" \"node pugconfig.js --watch\" \"npm run-script server\"",
        "build-dist": "webpack --config webpack.config.dist.js",
        "build-lib": "webpack --config webpack.config.lib.js",
        "cleanup": "rimraf ./dist ./lib ./build",
        "lint": "tslint --project tsconfig.json --force --format stylish --config tslint.json",
        "test": "nyc mocha",
        "test-watch": "mocha --watch",
        "coverage": "nyc report --reporter=text-lcov | coveralls",
        "doc": "typedoc --hideGenerator --readme README.md --target ES6 --module commonjs --mode file --out dist/doc/ source/",
        "prepack": "concurrently \"npm run build-dist\" \"npm run build-lib\""
    },
    "keywords": [
        "webgl",
        "rendering",
        "canvas",
        "engine",
        "2d",
        "3d",
        "multiframe"
    ]
}

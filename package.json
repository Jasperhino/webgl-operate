    "devDependencies": {
        "@types/chai": "4.1.2",
        "@types/chai-spies": "0.0.0",
        "@types/gl-matrix": "2.3.2",
        "@types/mocha": "2.2.48",
        "@types/query-string": "5.1.0",
        "@types/sinon": "4.1.3",
        "chai": "4.1.2",
        "chai-spies": "1.0.0",
        "coveralls": "3.0.0",
        "gl-matrix": "2.3.2",
        "glob": "7.1.2",
        "mocha": "5.0.1",
        "mocha-junit-reporter": "1.17.0",
        "mocha-multi-reporters": "1.1.7",
        "nyc": "11.4.1",
        "pug": "2.0.0-rc.4",
        "query-string": "5.1.0",
        "sinon": "4.3.0",
        "source-map-support": "0.5.3",
        "ts-loader": "3.5.0",
        "ts-node": "5.0.0",
        "tslint": "5.9.1",
        "typedoc": "0.10.0",
        "webpack": "3.11.0",
        "webpack-glsl-loader": "1.0.1",
        "webpack-sources": "1.1.0"
    },
    "dependencies": {
        "rxjs": "^5.5.6",
        "typescript": "^2.7.2"
    },
    "peerDependencies": {
        "rxjs": "^5.5.6"
    },
    "scripts": {
        "build": "webpack",
        "build-watch": "webpack --watch",
        "build-all": "webpack --config webpack.config.dist.js",
        "build-lib": "webpack --config webpack.config.lib.js",
        "check": "tslint --project tsconfig.json --force --format stylish --config tslint.json",
        "test": "nyc mocha",
        "coverage": "nyc report --reporter=text-lcov | coveralls",
        "doc": "typedoc --hideGenerator --readme README.md --target ES6 --module commonjs --mode file --out dist/doc/ source/",
        "example": "node pugconfig.js",
        "example-watch": "node pugconfig.js --watch",
        "deploy": "npm run build-all && npm run check && npm run test && npm run example && npm run doc",
        "deploy-lite": "npm run build && npm run example",
        "deploy-watch": "npm run build-watch | npm run example-watch",
        "prepublishOnly": "npm run build-all && npm run build-lib"
    },
    "keywords": [
        "webgl",
        "rendering",
        "canvas",
        "engine",
        "2d",
        "3d",
        "multiframe"
    ]
}

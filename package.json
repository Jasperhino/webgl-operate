{
  "name": "webgl-operate",
  "version": "0.1.4",
  "license": "MIT",
  "description": "A TypeScript based WebGL rendering framework.",
  "author": "CG Internals",
  "homepage": "https://webgl-operate.org",
  "jsdelivr": "./dist/webgl-operate.min.js",
  "main": "./lib/webgl-operate.js",
  "types": "./lib/webgl-operate.d.ts",
  "bugs": {
    "email": "contact@cginternals.com",
    "url": "https://github.com/cginternals/webgl-operate/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cginternals/webgl-operate.git"
  },
  "contributors": [
    {
      "name": "Daniel Limberger",
      "email": "daniel.limberger@cginternals.com"
    },
    {
      "name": "Philipp Otto",
      "email": "philipp.otto@cginternals.com"
    },
    {
      "name": "Willy Scheibel",
      "email": "willy.scheibel@cginternals.com"
    }
  ],
  "devDependencies": {
    "@types/chai": "4.1.2",
    "@types/chai-spies": "0.0.0",
    "@types/gl-matrix": "2.4.0",
    "@types/mocha": "2.2.47",
    "@types/query-string": "5.0.1",
    "@types/sinon": "4.1.3",
    "chai": "4.1.2",
    "chai-spies": "1.0.0",
    "coveralls": "3.0.0",
    "gl-matrix": "2.4.0",
    "glob": "7.1.2",
    "mocha": "5.0.0",
    "mocha-junit-reporter": "1.16.0",
    "mocha-multi-reporters": "1.1.7",
    "nyc": "11.4.1",
    "pug": "2.0.0-rc.4",
    "query-string": "5.0.1",
    "sinon": "4.2.1",
    "source-map-support": "0.5.2",
    "ts-loader": "3.3.1",
    "ts-node": "4.1.0",
    "tslint": "5.9.1",
    "typedoc": "0.9.0",
    "webpack": "3.10.0",
    "webpack-glsl-loader": "1.0.1",
    "webpack-sources": "1.1.0"
  },
  "dependencies": {
    "rxjs": "^5.5.6",
    "typescript": "^2.6.2"
  },
  "peerDependencies": {
    "rxjs": "^5.5.1"
  },
  "scripts": {
    "build": "webpack",
    "build-watch": "webpack --watch",
    "build-all": "webpack --config webpack.config.dist.js",
    "check": "tslint --project tsconfig.json --force --format stylish --config tslint.json",
    "test": "nyc mocha",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "doc": "typedoc --hideGenerator --readme README.md --target ES6 --module commonjs --mode file --out dist/doc/ source/",
    "example": "node pugconfig.js",
    "example-watch": "node pugconfig.js --watch",
    "deploy": "npm run build-all && npm run check && npm run test && npm run example && npm run doc",
    "deploy-lite": "npm run build && npm run example",
    "deploy-watch": "npm run build-watch | npm run example-watch",
    "prepublishOnly": "webpack --config webpack.config.dist.js && webpack --config webpack.config.lib.js"
  },
  "keywords": [
    "webgl",
    "rendering",
    "canvas",
    "engine",
    "2d",
    "3d",
    "multiframe"
  ],
  "nyc": {
    "check-coverage": false,
    "include": [
      "source/**/*.ts"
    ],
    "exclude": [
      "source/core/bindable.ts",
      "source/core/buffer.ts",
      "source/core/context.ts",
      "source/core/geometry.ts",
      "source/core/gl2facade.ts",
      "source/core/formatbytesizes.ts",
      "source/core/shader.ts",
      "source/core/program.ts",
      "source/core/object.ts",
      "source/core/vertexarray.ts",
      "source/assets/ndcfillingrectangle.ts",
      "source/assets/ndcfillingtriangle.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "cobertura",
      "lcov"
    ],
    "report-dir": "dist/test-results",
    "sourceMap": true,
    "instrument": true,
    "cache": true,
    "all": false
  }
}

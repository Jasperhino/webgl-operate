{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "npm",
    "isShellCommand": true,
    "suppressTaskName": true,
    "showOutput": "always",
    "echoCommand": true,
    "tasks": [
        {
            "taskName": "build",
            "isBuildCommand": true,
            "args": [
                "run-script",
                "build"
            ]
        },
        {
            "taskName": "build (watch)",
            "args": [
                "run-script",
                "build-watch"
            ]
        },
        {
            "taskName": "build all",
            "args": [
                "run-script",
                "build-all"
            ]
        },
        {
            "taskName": "build lib",
            "args": [
                "run-script",
                "build-lib"
            ]
        },
        {
            "taskName": "lint",
            "isTestCommand": true,
            "args": [
                "run-script",
                "lint"
            ]
        },
        {
            "taskName": "test",
            "isTestCommand": true,
            "args": [
                "run-script",
                "test"
            ]
        },
        {
            "taskName": "documentation",
            "args": [
                "run-script",
                "doc"
            ]
        },
        {
            "taskName": "website",
            "args": [
                "run-script",
                "website"
            ]
        },
        {
            "taskName": "website (watch)",
            "args": [
                "run-script",
                "website-watch"
            ]
        },
        {
            "taskName": "deploy",
            "args": [
                "run-script",
                "deploy"
            ]
        },
        {
            "taskName": "deploy lite",
            "args": [
                "run-script",
                "deploy-lite"
            ]
        },
        {
            "taskName": "deploy lite (watch)",
            "args": [
                "run-script",
                "deploy-watch"
            ]
        },
        {
            "taskName": "cleanup",
            "args": [
                "run-script",
                "cleanup"
            ]
        },
    ]
}

{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "npm",
    "isShellCommand": true,
    "suppressTaskName": true,
    "showOutput": "always",
    "echoCommand": true,
    "tasks": [
        {
            "taskName": "build",
            "isBuildCommand": true,
            "args": [
                "run-script",
                "build"
            ]
        },
        {
            "taskName": "server",
            "args": [
                "run-script",
                "server"
            ]
        },
        {
            "taskName": "server-watch",
            "args": [
                "run-script",
                "server-watch"
            ]
        },
        {
            "taskName": "build dist",
            "args": [
                "run-script",
                "build-dist"
            ]
        },
        {
            "taskName": "build lib",
            "args": [
                "run-script",
                "build-lib"
            ]
        },
        {
            "taskName": "lint",
            "isTestCommand": true,
            "args": [
                "run-script",
                "lint"
            ]
        },
        {
            "taskName": "test",
            "isTestCommand": true,
            "args": [
                "run-script",
                "test"
            ]
        },
        {
            "taskName": "documentation",
            "args": [
                "run-script",
                "doc"
            ]
        },
        {
            "taskName": "cleanup",
            "args": [
                "run-script",
                "cleanup"
            ]
        },
    ]
}

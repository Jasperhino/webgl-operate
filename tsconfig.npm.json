{
    "compileOnSave": false,
    "compilerOptions": {
        "alwaysStrict": true,
        "allowSyntheticDefaultImports": false,
        "lib": [
            "dom",
            "es2016"
        ],
        "target": "es5", /* UglifyJs does not yet support es6 */
        "module": "commonjs",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "skipLibCheck": true,
        "sourceMap": false,
        "strictNullChecks": true,
        "declaration": true,
        "outDir": "lib"
    },
    "include": [
        "source"
    ]
}
